<div class="container py-5">
  <div class="d-flex justify-content-between">
    <h2 class="border-title2">Vos résultats de recherche</h2>
    <%= link_to "Retour", root_path, class: "btn btn-ghost" %>
  </div>

  <div class="container mt-5">
    <div class="loutre-grid">
      <% @loutres.each do |loutre| %>
        <%= link_to loutre_path(loutre), class: "link-no-deco" do %>
          <div class="card-loutre mb-4">
            <% if loutre.image %>
              <%= image_tag(loutre.image) %>
            <% else  %>
              <img src="app/assets/images/loutre_chasse.jpeg">
            <% end %>
            <div class="card-loutre-infos">
              <div>
                <h2><%= loutre.name %></h2>
                <p><%=  loutre.personality %></p>
              </div>
              <h2><%= loutre.price %> € /jour</h2>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
