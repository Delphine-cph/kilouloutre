<div class="container py-5">
  <div class="d-flex justify-content-between">
    <h2 class="border-title2">Vos résultats de recherche</h2>
    <%= link_to "Retour", root_path, class: "btn btn-ghost" %>
  </div>

<div class="container">
<div class="row">
  <div class="mt-5 col-7">
    <div class="loutre-grid">
      <% @loutres.each do |loutre| %>
        <%= link_to loutre_path(loutre), class: "link-no-deco" do %>
          <div class="card-loutre mb-4">
            <%= image_tag(loutre.image) %>
            <div class="card-loutre-infos">
              <div>
                <h2><%= loutre.name %></h2>
                <p><%=  loutre.personality %></p>
              </div>
              <h2><%= loutre.price %> € /jour</h2>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="mt-5 col-5 pr-5">
    <div style="width: 500px; height: 600px;"
      data-controller="mapbox"
      data-mapbox-markers-value="<%= @markers.to_json %>"
      data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
  </div>
</div>
</div>
