<div class="container">

  <div class="text-center">
    <h1><%= @loutre.name %></h1>
  </div>

  <div class="row">
    <div class="col-12 card-show p-0">
      <div class="row">
        <img class="col-6" src=https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQagNt1OWs7j_3WxkSxDpVxffe7OsfM2U_0dQ&usqp=CAU/>
        <div class="col-6 descriptif">
          <p> Propriétaire : <%=@loutre.user.first_name.capitalize %> <%=@loutre.user.last_name.capitalize%></p>
          <p> Personalité : <%= @loutre.personality %></p>
          <p> Activité : <%= @loutre.event %></p>
          <p class="show-text"><%= @loutre.price %> €/jour </p>
        </div>
      </div>
    </div>
      <%= link_to "Réserver", new_loutre_location_path(@loutre), class:"button-res text-center" %>
  </div>
</div>
