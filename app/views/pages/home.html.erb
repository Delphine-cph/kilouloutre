<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path "loutre_grande_image.jpg" %>);">
  <div class="container">
    <h1>Loue une loutre</h1>
      <div>
    <%= simple_form_for :search, url: root_path, method: :get do |f| %>
      <div class="search-form-control form-group">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" />
        <button name="button" type="submit" class="btn btn-flat">
            <%= link_to "Toutes les loutres", loutres_path, class: "btn btn-light"%>
        </button>
      </div>
    <% end %>
</div>
  </div>
</div>

